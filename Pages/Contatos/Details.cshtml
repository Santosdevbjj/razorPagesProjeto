@page "{id:int}"
@model DetailsModel
<h2>Detalhes do Contato</h2>

<div>
    <p><strong>Nome:</strong> @Model.Contato.Nome</p>
    <p><strong>Telefone:</strong> @Model.Contato.Telefone</p>
    <p><strong>Email:</strong> @Model.Contato.Email</p>
    <p><strong>Data de Nascimento:</strong> @Model.Contato.DataNascimento.ToShortDateString()</p>
    <p><strong>Foto:</strong> <img src="@Model.Contato.Foto" alt="Foto" width="150" /></p>
</div>

<a asp-page="Index" class="btn btn-secondary">Voltar</a>
